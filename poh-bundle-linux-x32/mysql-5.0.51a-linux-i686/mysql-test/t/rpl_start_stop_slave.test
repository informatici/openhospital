source include/master-slave.inc;

#
# Bug#6148 ()
#
connection slave;
stop slave;

# Let the master do lots of insertions
connection master;
create table t1(n int);
let $1=5000;
disable_query_log;
while ($1)
{
 eval insert into t1 values($1);
 dec $1;
}
enable_query_log;
save_master_pos;

connection slave;
start slave;
sleep 1;
stop slave io_thread;
start slave io_thread;
sync_with_master;

connection master;
drop table t1;
save_master_pos;

connection slave;
sync_with_master;

# End of 4.1 tests
